<!--
  Newton's Cradle with three balls.
-->

<ball2d_scene>

  <camera cx="0.726622" cy="0.0" scale_factor="3.45072" fps="50" render_at_fps="1" locked="0"/>

  <integrator type="verlet" dt="0.001"/>

  <impact_operator type="gr" CoR="1.0" v_tol="1.0e-9">
    <solver name="ipopt" linear_solvers="ma97 ma57 mumps ma27 ma86" tol="1.0e-12"/>
  </impact_operator>

  <ball x="-2.0" y="+0.0" vx="+2.0" vy="+0.0" m="1.0" r="0.500001" fixed="0"/>
  <ball x="+0.0" y="+0.0" vx="+0.0" vy="+0.0" m="1.0" r="0.500001" fixed="0"/>
  <ball x="+1.0" y="+0.0" vx="+0.0" vy="+0.0" m="1.0" r="0.500001" fixed="0"/>

</ball2d_scene>
