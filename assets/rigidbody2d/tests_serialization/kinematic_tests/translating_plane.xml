<rigidbody2d_scene>

  <camera center="0 0" scale="4.0" fps="100" render_at_fps="1" locked="0"/>

  <scripting callback="translating_plane"/>

  <sobogus_friction_solver mu="10.0" CoR="0.3" max_iters="5000" eval_every="25" tol="1.0e-12" staggering="geometric" cache_impulses="normal_and_friction"/>

  <integrator type="verlet" dt="0.001"/>

  <near_earth_gravity f="0.0 -10.0"/>

  <static_plane x="0 -2" n="0 1"/>

  <geometry type="circle" r="0.5"/>

  <rigid_body x="0.0 0.0" theta="0.0" v="0.0 0.0" omega="0.0" rho="1.0" geo_idx="0"/>

</rigidbody2d_scene>
