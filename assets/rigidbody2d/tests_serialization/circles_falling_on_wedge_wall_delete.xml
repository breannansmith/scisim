<rigidbody2d_scene>

  <camera center="0 -1.5" scale="4.5" fps="50" render_at_fps="1" locked="0"/>

  <end_time t="4.0"/>

  <scripting callback="circles_falling_on_wedge_wall_delete"/>

  <integrator type="verlet" dt="0.0001"/>

  <sobogus_friction_solver mu="0.5" CoR="0.3" max_iters="5000" tol="2.0e-8" eval_every="1" staggering="geometric" cache_impulses="normal_and_friction"/>

  <near_earth_gravity f="0.0 -10.0"/>

  <static_plane x="-2 -2" n="1 1"/>
  <static_plane x="0 -4" n="0 1"/>
  <static_plane x="4 0" n="-1 0"/>
  <static_plane x="2 -2" n="-1 1"/>

  <geometry type="circle" r="0.5"/>
  <geometry type="circle" r="0.45"/>
  <geometry type="circle" r="0.35"/>
  <geometry type="circle" r="0.25"/>
  <geometry type="circle" r="0.49"/>
  <geometry type="circle" r="0.6"/>
  <geometry type="circle" r="0.33"/>

  <rigid_body x="0 0" theta="0.0" v="0 0" omega="0.0" rho="8.0" geo_idx="0" fixed="0"/>
  <rigid_body x="1 2" theta="0.0" v="0 0" omega="0.0" rho="4.0" geo_idx="1" fixed="0"/>
  <rigid_body x="-1 -1" theta="0.0" v="0 0" omega="0.0" rho="8.0" geo_idx="2" fixed="0"/>
  <rigid_body x="-1 3" theta="0.0" v="0 0" omega="0.0" rho="2.6" geo_idx="3" fixed="0"/>
  <rigid_body x="2 2" theta="0.0" v="0 0" omega="0.0" rho="3.7" geo_idx="4" fixed="0"/>
  <rigid_body x="-2 1.5" theta="0.0" v="0 0" omega="0.0" rho="8.3" geo_idx="5" fixed="0"/>
  <rigid_body x="-0.5 1.5" theta="0.0" v="0 0" omega="0.0" rho="5.4" geo_idx="6" fixed="0"/>

</rigidbody2d_scene>
