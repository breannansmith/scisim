<!--
  A spinning ball with initial vertical velocity collides with a horizontal plane and picks up horizontal velocity.
-->

<rigidbody2d_scene>

  <camera center="0.0 -0.765207" scale="1.6" fps="50" render_at_fps="0" locked="0"/>

  <sobogus_friction_solver mu="2.0" CoR="1.0" max_iters="50000" eval_every="25" tol="1.0e-12" staggering="geometric" cache_impulses="none"/>

  <integrator type="symplectic_euler" dt="0.01"/>

  <static_plane x="0 -2.21" n="0 1"/>

  <geometry type="circle" r="0.315"/>

  <rigid_body x="0.0 0.0" theta="0.0" v="0.0 -3.0" omega="-3.4" rho="2.17" geo_idx="0"/>

</rigidbody2d_scene>
